 {{!-- wig page title --}}
<div class="page-header">
    <h1 class="display-3">{{title}}</h1>
</div>
{{!-- hair information and pictures from http://bohoexoticstudio.com/ --}} {{!-- row --}}
<h2 class="display-4 text-center">Our Crowns</h2>
{{!-- wigs in database --}} {{# each wigs}}
<div class="row">
    {{# each this }}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="{{this.texture}}" alt="Relaxed Straight" class="img-responsive">
            <div class="caption">
                <h3>{{this.title}}</h3>
                <h4>Details</h4><p>{{this.description}}</p>
                <h5>Cap Size</h5><p>{{this.cap}}</p>
                <h6>Length</h6><p>{{this.length}}</p>
            </div>
        </div>
        <div class="clearfix">
            <div class="price pull-left">${{this.price}}</div>
            <a href="#" class="btn btn-success pull-right bg-danger text-white" role="button">Purchase</a>
        </div>
    </div>
    {{/each}}


</div>
{{/each}}